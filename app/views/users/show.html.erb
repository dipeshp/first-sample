<p id="notice"><%= notice %></p>
<%= render_crumbs%>
<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
<b>Title:</b>
<%= @user.title %>
</p>
<%= link_to "show comments", "/users/#{params[:id]}/comments"%>
<%= form_for([@user, @user.comments.build]) do |f| %>
  <p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :author %><br />
  <%= f.text_area :author %>
  </p>
  <p>
  <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
